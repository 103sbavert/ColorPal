<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorDotView">
        <attr name="paletteColor" format="color" />
    </declare-styleable>

    <style name="custom_toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="welcome_fragment_custom_radio_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_background</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="android:padding">45dp</item>
        <item name="android:textColor">@color/layout_selector_foreground_color</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
