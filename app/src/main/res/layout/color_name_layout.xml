<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/medium_gap">

    <com.sbeve.colorpal.views.ColorDotView
        android:id="@+id/color_circle"
        android:layout_width="@dimen/color_circle_size"
        android:layout_height="@dimen/color_circle_size"
        android:layout_gravity="center_vertical|start" />

    <TextView
        android:id="@+id/color_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:layout_margin="@dimen/small_gap"
        android:gravity="center_vertical|start"
        android:textAppearance="?textAppearanceHeadline6"
        tools:text="@string/app_name" />
</LinearLayout>
